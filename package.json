{
  "name": "prepost",
  "version": "1.0.0",
  "description": "Alter arguments and return values before and after a function is called",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:js": "babel src --out-dir lib",
    "watch": "run-p watch:*",
    "watch:js": "babel src --watch --out-dir lib",
    "test": "run-s lint test:*",
    "test:coverage": "nyc --reporter=lcov --reporter=text ava",
    "lint": "standard",
    "clean": "rm -rf lib/**",
    "prepublishOnly": "run-s build"
  },
  "author": "Alan Shaw",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "standard": "^10.0.3"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tableflip/prepost.git"
  },
  "keywords": [
    "pre",
    "post",
    "before",
    "after",
    "args",
    "arguments",
    "async",
    "sync",
    "promise",
    "return",
    "change",
    "modify",
    "alter",
    "mutate"
  ],
  "bugs": {
    "url": "https://github.com/tableflip/prepost/issues"
  },
  "homepage": "https://github.com/tableflip/prepost#readme",
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  }
}
